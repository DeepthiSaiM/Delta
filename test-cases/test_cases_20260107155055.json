{
  "test_cases": [
    {
      "test_case_name": "test_get_employee_success",
      "description": "Test to verify successful retrieval of an employee's details.",
      "input_parameters": {
        "endpoint": "/api/employee/123",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer <token>"
        }
      },
      "expected_output": {
        "status_code": 200,
        "response_body": {
          "id": 123,
          "name": "John Doe",
          "position": "Software Engineer"
        }
      },
      "assertions": [
        {
          "type": "status_code",
          "expected": 200
        },
        {
          "type": "response_body",
          "key": "id",
          "expected": 123
        },
        {
          "type": "response_body",
          "key": "name",
          "expected": "John Doe"
        },
        {
          "type": "response_body",
          "key": "position",
          "expected": "Software Engineer"
        }
      ]
    },
    {
      "test_case_name": "test_get_employee_not_found",
      "description": "Test to verify the response when an employee is not found.",
      "input_parameters": {
        "endpoint": "/api/employee/999",
        "method": "GET",
        "headers": {
          "Authorization": "Bearer <token>"
        }
      },
      "expected_output": {
        "status_code": 404,
        "response_body": {
          "error": "Employee not found"
        }
      },
      "assertions": [
        {
          "type": "status_code",
          "expected": 404
        },
        {
          "type": "response_body",
          "key": "error",
          "expected": "Employee not found"
        }
      ]
    }
  ]
}