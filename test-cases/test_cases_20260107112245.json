[
  {
    "test_case_name": "test_get_user_by_id",
    "description": "Verify the GET /users/{id} endpoint returns the correct user details for a valid user ID.",
    "endpoint": "/users/{id}",
    "method": "GET",
    "input_parameters": {
      "path": {
        "id": "valid_user_id"
      }
    },
    "expected_output": {
      "status_code": 200,
      "response_body": {
        "id": "valid_user_id",
        "name": "John Doe",
        "email": "johndoe@example.com"
      }
    },
    "assertions": [
      "response.status_code == 200",
      "response.json()['id'] == 'valid_user_id'",
      "response.json()['name'] == 'John Doe'",
      "response.json()['email'] == 'johndoe@example.com'"
    ]
  },
  {
    "test_case_name": "test_create_user",
    "description": "Verify the POST /users endpoint creates a new user successfully and returns the correct details.",
    "endpoint": "/users",
    "method": "POST",
    "input_parameters": {
      "body": {
        "name": "Jane Doe",
        "email": "janedoe@example.com"
      }
    },
    "expected_output": {
      "status_code": 201,
      "response_body": {
        "id": "new_user_id",
        "name": "Jane Doe",
        "email": "janedoe@example.com"
      }
    },
    "assertions": [
      "response.status_code == 201",
      "response.json()['id'] is not None",
      "response.json()['name'] == 'Jane Doe'",
      "response.json()['email'] == 'janedoe@example.com'"
    ]
  }
]