[
  {
    "Test Case Name": "test_get_user_success",
    "Description": "Test to verify successful retrieval of a user by ID.",
    "Input Parameters": {
      "method": "GET",
      "endpoint": "/user/{id}",
      "headers": {
        "Authorization": "Bearer <token>"
      },
      "path_parameters": {
        "id": "123"
      }
    },
    "Expected Response": {
      "status_code": 200,
      "body": {
        "id": "123",
        "name": "John Doe",
        "email": "johndoe@example.com"
      }
    },
    "Assertions": [
      "response.status_code == 200",
      "response.body['id'] == '123'",
      "response.body['name'] == 'John Doe'",
      "response.body['email'] == 'johndoe@example.com'"
    ]
  },
  {
    "Test Case Name": "test_create_user_success",
    "Description": "Test to verify successful creation of a new user.",
    "Input Parameters": {
      "method": "POST",
      "endpoint": "/user",
      "headers": {
        "Authorization": "Bearer <token>",
        "Content-Type": "application/json"
      },
      "body": {
        "name": "Jane Doe",
        "email": "janedoe@example.com",
        "password": "securepassword123"
      }
    },
    "Expected Response": {
      "status_code": 201,
      "body": {
        "id": "124",
        "name": "Jane Doe",
        "email": "janedoe@example.com"
      }
    },
    "Assertions": [
      "response.status_code == 201",
      "response.body['id'] is not None",
      "response.body['name'] == 'Jane Doe'",
      "response.body['email'] == 'janedoe@example.com'"
    ]
  }
]